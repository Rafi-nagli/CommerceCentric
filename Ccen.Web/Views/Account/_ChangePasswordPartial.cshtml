@model Amazon.Web.ViewModels.Account.PasswordViewModel



    <script>
        onChangePasswordComplete = function(e) {

        }
    </script>

    @using (Ajax.BeginForm("ChangePassword", "Account", new AjaxOptions()
    {
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "changePasswordPanel",
        OnComplete = "onChangePasswordComplete"
    }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()

    <div class="panel panel-default" style="max-width: 350px;">
        <div class="panel-heading">Change Password</div>
        <div class="panel-body">
            @if (Model.Result != null && Model.Result.IsSuccess)
            {
                <div class="alert alert-success">
                    @Model.Result.Message
                </div>
            }

            <div class="form-group">
                <label>Current password:</label>
                @Html.PasswordFor(m => m.OldPassword, new {@class = "form-control"})
            </div>

            <div class="form-group">
                <label>New password:</label>
                @Html.PasswordFor(m => m.NewPassword, new {@class = "form-control"})
            </div>

            <div class="form-group">
                <label>Confirm new password:</label>
                @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control"})
            </div>

            <input type="submit" value="Change password" class="k-button"/>
        </div>
    </div>
}

