@using Amazon.Core.Models
<script>
    var GeneratePopupModel = function() {
        var self = this;

        self.init = function(styleViewModel) {
            ko.applyBindings(styleViewModel, $('#generatePopupContent')[0]);
        }
    }
</script>

<!-- ko stopBinding: true -->
<div id="generateContent" class="generateContent" style="display: none">
    <div id="generatePopupContent">
        <div class="k-edit-form-container" style="width: auto; font-size: 13px">
            <div class="inventory-popup">
                
                            <div class="panel panel-default">
                                <div class="panel-heading">General</div>
                                <div class="panel-body">
                                    <div class="editor-label">Name:</div>
                                    <div class="editor-field">
                                        <img height='75' style='border: 0' data-bind="attr: { 'src': generateStyle.Thumbnail }" />
                                        <div style="display:block; float:left">
                                            <span data-bind="text: generateStyle.Name" />
                                        </div>
                                    </div>

                                    <div class="editor-label">Price:</div>
                                    <div class="editor-field">
                                        <input type="text" class="k-textbox" data-bind="value: generateStyle.Price" />
                                    </div>
                                    <div class="editor-label">MSRP:</div>
                                    <div class="editor-field">
                                        <input type="text" class="k-textbox" data-bind="value: generateStyle.MSRP" />
                                    </div>
                                </div>
                            </div>

                            <div class="panel panel-default">
                                <div class="panel-heading">Sizes</div>
                                <div class="panel-body">
                                    <div>
                                        <table class="size-table">
                                            <tr>
                                                <th>Size/Color</th>
                                                <th>Qty</th>
                                                <th>Barcode</th>
                                            </tr>
                                            <tbody data-bind="foreach: styleItemsList().styleItems">
                                                <tr>
                                                    <td>
                                                        <div><span data-bind="text: size"></span> / <span data-bind="textFormatted: color, ifEmpty: '-'"></span></div>
                                                    </td>
                                                    <td><input style='width: 50px' class="k-textbox" data-bind='value: Quantity, attr: { tabindex: $index() + 10100 }' autocomplete='off' /></td>
                                                    <td><input type="checkbox" data-bind="checked: AutoGeneratedBarcode" /> PA UPC</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        
            </div>


            <div class="k-edit-buttons k-state-default popup-button-panel" style="position: static">
                <table style="margin-left: auto">
                    <tr>
                        <td colspan="3" style="padding-bottom: 18px">
                            @*<div class="flag-icon" style="margin-left: 15px"><input style="margin-top: 8px" type="radio" value="@((int) MarketType.Walmart)" data-bind="checked: generateStyle.GenerateForMarket"/><span class="flag-Walmart flag-icon"></span></div>*@
                            <div class="flag-icon" style="margin-left: 15px"><input style="margin-top: 8px" type="radio" value="@((int) MarketType.AmazonEU)" data-bind="checked: generateStyle.GenerateForMarket"/><span class="flag-UK flag-icon"></span></div>
                            <div class="flag-icon" style="margin-left: 15px"><input style="margin-top: 8px" type="radio" value="@((int) MarketType.Amazon)" data-bind="checked: generateStyle.GenerateForMarket"/><span class="flag-US flag-icon"></span></div>
                            <div class="flag-icon" style="margin-left: 15px"><input style="margin-top: 8px" type="radio" value="" data-bind="checked: generateStyle.GenerateForMarket"/><span class="flag-icon" style="margin-top: 8px; margin-left: 2px">No Excel</span></div>
                            <span style="margin-top: 8px; font-weight: bold" class="flag-icon gray">Generate Excel: </span>
                        </td>
                    </tr>
                    <tr>
                        <td style="width: 300px"></td>
                        <td style="margin-right: 5px">
                            <button tabindex="-1"
                                    data-bind="click: onGenerate"
                                    class="k-button">
                                <span class="k-icon k-update"></span>
                                <span data-bind="visible: generateStyle.isNoExcelMode">Save</span>
                                <span data-bind="visible: !generateStyle.isNoExcelMode()">Save & Generate</span>
                            </button>
                        </td>
                        <td style="vertical-align: bottom">
                            <button class="k-button k-button-icontext k-grid-cancel"
                                    data-bind="click: onCloseGenerate">
                                <span class="k-icon k-cancel"></span>Cancel
                            </button>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- /ko -->